@model CountryDetailsViewModel
@{
    ViewData["Title"] = "Country details";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name" class="font-weight-bold"></label>
                <input asp-for="Name" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Code" class="font-weight-bold"></label>
                <input asp-for="Code" readonly class="form-control" />
            </div>
            @await Html.PartialAsync("_ManufacturersListPartial", Model.Manufacturers) 
            <a class="btn btn-danger" asp-area="@AdministrationArea" asp-controller="Country" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-primary" asp-area="@AdministrationArea" asp-controller="Country" asp-action="Index">Back</a>
        </form>
    </div>
</div>
