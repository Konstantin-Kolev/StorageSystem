@model UserDetailsViewModel
@{
    ViewData["Title"] = "User details";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Username" class="font-weight-bold"></label>
                <input asp-for="Username" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="font-weight-bold"></label>
                <input asp-for="Email" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="font-weight-bold"></label>
                <input asp-for="Name" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="font-weight-bold"></label>
                <input asp-for="Surname" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="font-weight-bold"></label>
                <input asp-for="PhoneNumber" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Role" class="font-weight-bold"></label>
                <input asp-for="Role" readonly class="form-control" />
            </div>
            <a class="btn btn-danger" asp-area="@AdministrationArea" asp-controller="User" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-primary" asp-area="@AdministrationArea" asp-controller="User" asp-action="Index">Back</a>
        </form>
    </div>
</div>
